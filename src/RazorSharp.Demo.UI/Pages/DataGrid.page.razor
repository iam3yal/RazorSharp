        new(1, "Morton", "Scarlon", 38, true),
        new(2, "Shannan", "Targett", 10, false),
        new(3, "Raimundo", "Keitley", 3, false),
        null,
        new(4, "Ronica", "Wemes", 38, true),
        new(5, "Elana", "Riggey", 14, false),
        new(6, "Bari", "Iiannone", 37, true),
        new(7, "Emmaline", null, 15, false),
        new(8, "Ravid", "Riches", 62, true),
        new(9, "Elton", "Lettson", 47, false),
        new(10, "Caprice", "Poschel", 51, true)
    };

    public record Person(
        int Id,
        string FirstName,
        string? LastName,
        int Age,
        bool HasChildren);

}