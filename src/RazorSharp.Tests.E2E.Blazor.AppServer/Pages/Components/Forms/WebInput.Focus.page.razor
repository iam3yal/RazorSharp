@page "/Components/Forms/WebInput/Focus"
@using System.Text
@using RazorSharp.Components.Forms

<WebInput
    TValue="string"
    OnFocus="@FocusHandler"
    OnBlur="@BlurHandler"
    OnFocusIn="@FocusInHandler"
    OnFocusOut="@FocusOutHandler"
    data-testid="WebInput" data-event="@_sb.ToString()">
</WebInput>

@code {
    private readonly StringBuilder _sb = new();

    private void FocusHandler()
    {
        _sb.Clear();

        _sb.Append("focus;");
    }

    private void BlurHandler()
        => _sb.Append("blur;");

    private void FocusInHandler()
        => _sb.Append("focusin;");

    private void FocusOutHandler()
        => _sb.Append("focusout;");
}